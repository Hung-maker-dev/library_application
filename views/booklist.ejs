<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>List of Books</title>
    <link rel="stylesheet" type="text/css" href="/css/bookstyle.css">
</head>
<body>
    <div class="content">
        <div class="container">
            <div class="column1">
                <h1>List of Books</h1>
                <table class="center">
                    <tr>
                        <th>Book ID</th>
                        <th>Book</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Age Group</th>
                        <th>Book Type</th>
                    </tr>

                    <% books.forEach(function(book) { %>
                        <tr>
                            <td><%= book.Book_id %></td>
                            <td><%= book.Book_name %></td>
                            <td><%= book.Author_name %></td>
                            <td><%= book.Price %></td>
                            <td><%= book.Age_group %></td>
                            <td><%= book.Book_type %></td>
                        </tr>
                    <% }); %>
                </table>

                <div style="text-align: center; margin-top: 10px;">
                    <small>V 1.0 Â© Aptech Limited</small>
                </div>
            </div>
        </div>
    </div>

    <p><a href="/logout">Logout</a></p>
</body>
</html>
